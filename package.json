{
  "name": "express-minimal-boilerplate",
  "version": "1.0.0",
  "description": "Simple & minimal ES6+ Express boilerplate",
  "main": "index.js",
  "repository": "https://github.com/tommitchelmore/express-minimal-boilerplate",
  "author": "Thomas Mitchelmore",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.19.3",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "redis": "^3.1.2",
    "regenerator-runtime": "^0.13.9",
    "uid-safe": "^2.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "dev": "nodemon --delay 500ms -x babel-node src/index.js",
    "clean": "rimraf dist",
    "dev:client": "cd ./client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "install:client": "cd ./client && npm i",
    "build": "npm run clean && babel ./src --out-dir dist --copy-files",
    "build:client": "cd ./client && npm run build",
    "build:full": "npm run build:client && npm run build",
    "serve": "node -r dotenv/config dist/index.js"
  }
}
